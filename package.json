{
  "name": "introversion",
  "description": "Debugging JavaScript expressions, works great with functional code",
  "keywords": [
    "js",
    "debug",
    "functional"
  ],
  "license": "MIT",
  "author": "Gene Zharov <gene.zharov@gmail.com>",
  "version": "0.3.0",
  "homepage": "https://github.com/kahless/introversion",
  "bugs": {
    "url": "https://github.com/kahless/introversion/issues",
    "email": "gene.zharov@gmail.com"
  },
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "module": "es/index.js",
  "files": [ "lib", "src", "dist", "es" ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kahless/introversion.git"
  },
  "scripts": {
    "prettify": "prettier --write 'src/**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "yarn build:cjs && yarn build:umd && yarn build:es && yarn build:flow",
    "build:es": "rm -r es && NODE_ENV=es babel -d es/ src/",
    "build:cjs": "rm -r lib && NODE_ENV=commonjs babel -d lib/ src/",
    "build:umd": "rm -r dist && mkdirp dist/ && NODE_ENV=umd babel -o dist/introversion.js src/",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src lib"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-es2015-modules-umd": "6.24.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "flow-bin": "0.95.1",
    "flow-copy-source": "2.0.3",
    "jest": "24.5.0",
    "prettier": "1.16.4"
  }
}
